<?xml version="1.0" encoding="UTF-8"?>
<story>
	<rooms>
		<room id="#GameStart" type="StoryBoard" randomActionMessage="false">
			<choices>
				<choice next="GotoA">Goto A</choice>
				<choice next="GotoB">Goto B</choice>
				<choice next="ClassSelect">Class Select</choice>
				<choice next="#GameOver">Exit game</choice>
			</choices>
			<description>You are the starting point
No random action message is shown, so what do you want to do?</description>
		</room>
		<room id="ClassSelect" type="ClassSelector">
			<confirm>You fell more powerfull</confirm>
			<choices>
				<choice next="#GameStart">Goto to start</choice>
				<choice next="GotoB">Goto B</choice>
			</choices>
			<description>You are now in A</description>
		</room>
		<room id="GotoA" type="StoryBoard">
			<choices>
				<choice next="#GameStart">Goto to start</choice>
				<choice next="GotoB">Goto B</choice>
			</choices>
			<description>You are now in A</description>
		</room>
		<room id="GotoB" type="StoryBoard">
			<choices>
				<choice next="#GameStart">Goto to start</choice>
				<choice next="GotoA">Goto A</choice>
			</choices>
			<description>You are now in B</description>
		</room>
	</rooms>
	<messages>
		<message type="actionMove">What do you want do now ?</message>
		<message type="actionMove">Where do you want to go ?</message>
		<message type="actionMove">What do you want to do next ?</message>
		<message type="actionMove">Where do you plan to do now?</message>
	</messages>
	<classes>
		<class name="A normal person" id="person"></class>
		<class name="God" id="god" selectable="false"></class>
	</classes>
</story>